<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Choose Your Case"
            android:id="@+id/chooseCase"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|bottom|center|right|fill"
            android:layout_columnSpan="2"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:id="@+id/topLeftButton"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/case1"
            android:cropToPadding="false"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:id="@+id/bottomLeftButton"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/case3"
            android:cropToPadding="false"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:id="@+id/topRightButton"
            android:layout_row="1"
            android:layout_column="1"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/case2" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal|left"
            android:indeterminate="false" />

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:id="@+id/bottomRightButton"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/case4"
            android:cropToPadding="false"
            android:scaleType="fitXY"/>

    </GridLayout>


</RelativeLayout>
